
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/_Layout_SaborESaude_Padroes.css")
    @Styles.Render("~/Content/_Layout_SaborESaude.css")
    @Scripts.Render("~/bundles/modernizr")


    @{
        var AdmLogado = (SENAI.ExemploStartUp.Models.Models.Admin)Session["SessionAdmin"];
    }

</head>

<body>
    <div class="Top_Master">
        <center>
            <div class="Logo">

                <a href="/Admin/Default"> <img src="~/Imagens/Padrao/Logo.png" /></a>
            </div>
        </center>
        @{
            if (AdmLogado == null)
            {

            }
            else
            {

                <div class="dropdown" style="float:right; color:white;">
                    <button class="dropbtn">@Html.ActionLink("Sair", "LogOut", "Admin")</button>
                </div>
            }
        }

    </div>
    <br /><br />
    <div class="Conteiner-Adm">
        @{
            if (AdmLogado == null)
            {

            }
            else
            {

                <h2><strong>Area Administrativa @Html.LabelForModel(AdmLogado.Email) </strong></h2>
                <hr style="width:60%; height:1px; background-color:#808080; margin-left:-10px;" />
                <hr style="width:20%; height:3px; background-color:#808080; margin-left:-10px; margin-top:-22px;" />

                <div class="row">
                    <table class="table">
                        @Html.ActionLink("Categorias", "Index", "Categoria", "", new { @class = "btn btn-light" })
                        @Html.ActionLink("Promocoes", "Index", "Promocao", "", new { @class = "btn btn-light" })
                        @Html.ActionLink("Produtos", "Index", "Produtos", "", new { @class = "btn btn-light" })
                        @Html.ActionLink("Clientes", "TodosOsCliente", "Cliente", "", new { @class = "btn btn-light" })
                        @Html.ActionLink("Administradores", "Index", "Admin", "", new { @class = "btn btn-light" })
                        @Html.ActionLink("Pedidos", "TodosOsPedidos", "Carrinho", "", new { @class = "btn btn-light" })
                    </table>
                </div>
                <hr>


            }
        }


        <div class="">
            @RenderBody()
            
        </div>
    </div>
    <hr />
    <footer>
        <p style="color:white; font-size:12px;">&copy; @DateTime.Now.Year - SABOR & SAÚDE</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
