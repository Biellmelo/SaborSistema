@*@model SENAI.ExemploStartUp.Models.Models.Cliente*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - .: Sabor & Saúde :.</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/_Layout_SaborESaude_Padroes.css")
    @Styles.Render("~/Content/_Layout_SaborESaude.css")
    @Styles.Render("~/Content/AreaCliente.css")
    @Scripts.Render("~/bundles/modernizr")

    @{ 
        var UserLogado = (SENAI.ExemploStartUp.Models.Models.Cliente)Session["SessionCliente"];
    }

</head>
<body style="background-color:white;">
    <div class="Top_Master">
        <div class="Logo">
            <a href="/Home"> <img src="~/Imagens/Padrao/Logo.png" /></a>
        </div>
        
       
        @{
            if (UserLogado == null)
            {
                <div class="dropdown" style="float:right;">
                    <button id="Logado" class="dropbtn" data-toggle="modal" data-target="#exampleModal"><strong>Fazer Login</strong></button>
                </div>


                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                
                                @using (Html.BeginForm("EfetuarLogin", "Home", FormMethod.Post))
                                {
                                    <center>
                                        <br />
                                        <div class="form-group">
                                            @Html.TextBox("email", "", new { id = "email", @class = "form-control", placeholder = "Insira seu e-mail" })
                                        </div>

                                        <div class="form-group">
                                            @Html.Password("senha", "", new { id = "senha", @class = "form-control", placeholder = "Insira sua senha" })
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Efetuar Login" class="btn btn-success" style="margin-bottom:-30px;" />
                                        </div>
                                    </center>
                                }

                            </div>
                            <div class="modal-footer">
                                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                                @Html.ActionLink("Cariar Nova Conta", "CadastrarCliente", "Home", "", new { @class = "btn btn-primary" })
                                @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal_2">Criar Nova Conta</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (UserLogado != null)
            {
                <div class="dropdown" style="float:right;">
                    <button id="Logado" class="dropbtn"><strong>Olá @Html.LabelForModel(UserLogado.Nome)▼</strong></button>
                    <div class="dropdown-content">
                        <a style="color:gray;" href="/Cliente/MinhaConta">Minha Conta</a>
                        <a style="color:gray;" href="/Carrinho/MeusPedidos">Meus Pedidos</a>
                        @Html.ActionLink("Sair", "LogOut", "Cliente", "", new { @style="color:gray;" })
                    </div>
                </div>
            }


        }
    </div>

   
    <br /><br />
    @using (Html.BeginForm("Pesquisa", "Produtos", FormMethod.Post))
    {
        <div class="SearchBoxBg">
            @Html.TextBox("id", "", new  { id = "id", @class = "SearchBox", placeholder = "QUAL VAI SER HOJE?", @style = "min-width:100 %; font-size: 30px;" })
            
                <input type="submit" value="" class="BtnPesquisar" />
            
        </div>
    }
    <br /><br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:88.8%">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="../Imagens/Slider/1.png" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="../Imagens/Slider/1.png" alt="Los Angeles">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="display:none">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next" style="display:none;">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr style="height:3px; width:88.8%; background-color:#349e8e; margin-top:3px;" />
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
