@model IEnumerable<SENAI.ExemploStartUp.Models.Models.CarrinhoDeCompras>

@{
    ViewBag.Title = "MeusPedidos";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var UserLogado = (SENAI.ExemploStartUp.Models.Models.Cliente)Session["SessionCliente"];
}

<h2> @Html.LabelForModel(UserLogado.Nome), aqui estão seus pedidos.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.StatusId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotal)
        </td>
    </tr>
}

</table>
