@model SENAI.ExemploStartUp.Models.Models.Promocao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="Conteiner-Adm">
    <h2>Excluir Promoção</h2>

    <h3>Deseja realmente deletar permanentemente esta promoção?</h3>
    <div>
       
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Confirmar Exclusão" class="btn btn-default" /> |
                @Html.ActionLink("Cancela e Voltar", "Index")
            </div>
        }
    </div>
    <br /><br />
</div>